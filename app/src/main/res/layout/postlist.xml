<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="#103C5E"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:src="@drawable/mask"></ImageView>

                <TextView
                    android:id="@+id/post_username"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:text="Unknown name "
                    android:textColor="@color/white"
                    android:fontFamily="@font/macondo"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:fontFamily="@font/cantata_one"
                android:layout_marginBottom="8dp"
               android:hint="Type whatever you want"
                android:textColorHint="#FFF8F8"></TextView>

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:src="@drawable/unknown1"
                android:layout_height="150dp"
               >

            </ImageView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>