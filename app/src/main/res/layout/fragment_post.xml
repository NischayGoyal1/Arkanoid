<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.PostFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/app_gallery"
            android:layout_width="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"></ImageView>

        <ImageView
            android:layout_width="155dp"
            android:src="@drawable/incognito"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:layout_height="125dp">



        </ImageView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/macondo"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:text="Share anything Anonymity">

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor= "#0E3351">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:textColor="#FFFCFC"
                android:textStyle="normal"
                android:hint="You are free to post anything"
                android:textColorHint="#B5A3A3"
                android:id="@+id/post_caption"></EditText>


        </ScrollView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>